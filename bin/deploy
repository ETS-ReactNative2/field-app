#!/bin/bash

if [ "$#" -ne 2 ]; then
  echo "Usage: ./bin/deploy /path/to/expo-credentials.json /path/to/sentry-credentials.json"
  exit 1
fi

./bin/clean            && \
./bin/switch_env prod  &&
./bin/export           && \
./bin/build $1         && \
./bin/push_gh_pages    && \
./bin/upload $1        && \
./bin/sourcemap $2
