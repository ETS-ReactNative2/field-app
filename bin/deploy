#!/bin/bash

if [ "$#" -ne 3 ]; then
  echo "Usage: ./bin/deploy github-api-token expo-credentials.json sentry-credentials.json"
  exit 1
fi

./bin/clean                        && \
./bin/switch_env prod              && \
./bin/export                       && \
./bin/github_release $1            && \
./bin/build $2                     && \
./bin/github_release $1 --append   && \
./bin/push_gh_pages                && \
./bin/upload $2                    && \
./bin/sourcemap $3
